<%- include ../layouts/header.ejs %>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <% if (user.rol=='docente') { %>
                <div class="card-body">
                    <h2 text-dark> <strong>BIENVENIDO!</strong></h2>
                    <h3 class="card-title"><%=user.nombre %></h3>
                    <a href="/materias/crear">Crear Materia</a>
                </div>
                <% }else if (user.rol=='alumno'){%>
                <div class="card-body">
                    <h2 text-dark> <strong>BIENVENIDO!</strong></h2>
                    <h3 class="card-title"><%=user.nombre %></h3>
                    <a href="/materias/add" class="btn btn-primary m-4">Inscribirse a una Materia</a>
                </div>
                <%}%>
            </div>
        </div>

    </div>
</div>

<%- include ../layouts/footer.ejs %>